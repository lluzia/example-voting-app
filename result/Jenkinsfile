pipeline {
    agent any
    
    tools{
        nodejs 'NodeJS 8.9.0'
    }

    stages {
      
        stage('build') {
            when{
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        
        stage('test') {
            when{
                changeset "**/result/**"
                
            }
            steps {
                echo 'Running Unit Tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
                
            }
        }
    //     stage('package') {
    //         when{
    //             branch 'master'
    //             changeset "**/result/**"
    //         }
    //         steps {
    //             echo 'Packaging result app'
    //             dir('result'){
    //                 sh 'mvn package -DskipTests'
    //                 archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
    //             }
                
    //         }
    //     }
    //   }
        
    post{
      always{
        
        echo 'Building multibranch pipeline for result is completed.'
      }
    }
}
